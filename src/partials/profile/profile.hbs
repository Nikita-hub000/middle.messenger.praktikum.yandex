                <p class="form__header">Почта</p>
                <input name="email" type="email" class="form__input" value="pochta@yandex.ru" />
            </div>
            <div class="form__container">
                <p class="form__header">Логин</p>
                <input name="login" type="text" class="form__input" value="ivanivanov" />
            </div>
            <div class="form__container">
                <p class="form__header">Имя</p>
                <input name="first_name" type="text" class="form__input" value="Иван" />
            </div>
            <div class="form__container">
                <p class="form__header">Фамилия</p>
                <input name="second_name" type="text" class="form__input" value="Иванов" />
            </div>
            <div class="form__container">
                <p class="form__header">Имя в чате</p>
                <input name="display_name" type="text" class="form__input" value="Иван" />
            </div>
            <div class="form__container">
                <p class="form__header">Телефон</p>
                <input name="phone" type="tel" class="form__input" value="+7 (909) 967 30 30" />
            </div>
            <button type="submit" class="form__button">Сохранить</button>
        </form>
    </main>
    {{/if}}
    {{#if isEditPassword}}
    <main class="profile__main">
        <div class="profile__main__image profile__main__image-default">
            <img src="../asserts/profile-default-img.svg"/>
        </div>
        <form class="form">
            <div class="form__container">
                <p class="form__header">Старый пароль</p>
                <input name="oldPassword" type="password" class="form__input form__input-password" value="aaaaaa" />
            </div>
            <div class="form__container">
                <p class="form__header">Новый пароль</p>
                <input name="newPassword" type="password" class="form__input form__input-password" />
            </div>
            <div class="form__container">
                <p class="form__header">Повторите новый пароль</p>
                <input name="newPassword" type="password" class="form__input form__input-password" />
            </div>
            <button type="submit" class="form__button">Сохранить</button>
        </form>
    </main>
    {{/if}}
    {{> popup/popup isVisible=false type="form-file" title="Загрузите файл" btnText="Поменять" errorText="Нужно выбрать файл" }}
    {{> popup/popup isVisible=false type="agreement" title="Вы уверены?" }}
</section>
