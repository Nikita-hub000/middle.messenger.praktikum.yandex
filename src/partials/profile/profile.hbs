<section class="profile">
    <nav class="profile__back">
        <a href="/"><img class="profile__back__image" src="../asserts/back.svg"/></a>
    </nav>
    {{#if (eq isEditPassword isEditProfile)}}
    <main class="profile__main">
        <div class="profile__main__image profile__main__image-default">
            <img src="../asserts/profile-default-img.svg"/>
        </div>
        <h1 class="profile__main__header">Иван</h1>
        <form class="form">
            <div class="form__container">
                <p class="form__header">Почта</p>
                <input name="email" type="email" class="form__input" disabled="true" value="pochta@yandex.ru" />
            </div>
            <div class="form__container">
                <p class="form__header">Логин</p>
                <input name="login" type="text" class="form__input" disabled="true" value="ivanivanov" />
            </div>
            <div class="form__container">
                <p class="form__header">Имя</p>
                <input name="first_name" type="text" class="form__input" disabled="true" value="Иван" />
            </div>
            <div class="form__container">
                <p class="form__header">Фамилия</p>
                <input name="second_name" type="text" class="form__input" disabled="true" value="Иванов" />
            </div>
            <div class="form__container">
                <p class="form__header">Имя в чате</p>
                <input name="display_name" type="text" class="form__input" disabled="true" value="Иван" />
            </div>
            <div class="form__container">
                <p class="form__header">Телефон</p>
                <input name="phone" type="tel" class="form__input" disabled="true" value="+7 (909) 967 30 30" />
            </div>
            <div class="form">
                <div class="form__container">
                    <a href="edit-profile.hbs" class="form__header form__header-blue">Изменить данные</a>
                </div>
                <div class="form__container">
                    <a href="edit-password.hbs" class="form__header form__header-blue">Изменить пароль</a>
                </div>
                <div class="form__container">
                    <button type="submit" class="form__header form__header-red">Выйти</button>
                </div>            
            </div>
        </form>
    </main>
    {{/if}}
    {{#if isEditProfile}}
